---
import Hero from "@components/Hero.astro";
import teamData from "@data/team.json";
import ContactCard from "./ContactCard.astro";

const props = Astro.props;
---

<>
  <Hero title={teamData.contact.title} image={teamData.contact.hero_bg} />
  <section class="section !pb-0">
    <div class="container-in-section flex-container">
      <p
        class="max-w-sm text-center text-[1.26316rem] font-bold leading-none lg:text-[1.47368rem]"
      >
        {teamData.contact.before_text}
      </p>
    </div>
  </section>
  <section class="section">
    <div
      class="container-in-section flex-container !flex-row flex-wrap justify-center !gap-[5.8rem]"
    >
      {teamData.members.map((member, idx) => <ContactCard {...member} {idx} />)}
    </div>
  </section>
  <section class="section">
    <div class="container-in-section flex-container">
      <p class="mb-0 text-[1.47368rem] font-bold">
        {teamData.contact.after_title}
      </p>
      <p class="max-w-[80%] text-center text-[1.05263rem]">
        {teamData.contact.after_text}
      </p>
    </div>
  </section>
</>
